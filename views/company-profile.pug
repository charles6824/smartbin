include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container mt-2")
                        div(class="row justify-content-center")
                            div(class="col-md-10")
                                div(class="row")
                                    div(class="col-lg-5")
                                        form(method="POST" enctype="multipart/form-data")
                                            div(class="card")
                                                if companyAdmin.logo
                                                    - let imageUrl = "/uploads/companys/" + companyAdmin.companyCode + '/logo/' + companyAdmin.logo
                                                    img(src=imageUrl alt="" width="100%" height="300px")
                                                else
                                                    img(src="/images/default-avatar.png" alt="" width="100%" height="300px")
                                                label(class="btn-file2 mt-4") #[i(class="fa fa-upload pr-2")] Change Logo
                                                    input(type="file" name='picture' id='picture')
                                            div(class="mt-3 mb-3 text-center")
                                                input(type="submit" class="main-btn"  value="Update")

                                            if success
                                                if success.length != 0
                                                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{success}

                                            if error
                                                if error.length != 0
                                                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") ×
                                                        span #{error}

                                    div(class="col-lg-7 mt-3")
                                        div(class="card-box")
                                            .row
                                                .col-3
                                                    label(for="ID" class="label") Company Code:
                                                .col-9
                                                    input(type="text" value= companyAdmin.companyCode class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="class" class="label") Name:
                                                .col-9
                                                    input(type="text" value= companyAdmin.companyName class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="firstname" class="label") Email:
                                                .col-9
                                                    input(type="text" value= companyAdmin.companyEmail class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="pthername" class="label") Address:
                                                .col-9
                                                    - let address = companyAdmin.address + ", " + companyAdmin.state + ", " + companyAdmin.country
                                                    input(type="text" value= address class="profile-form mb-4" name="otherName" readonly)
                                                .col-3
                                                    label(for="lastname" class="label") Admin's Name:
                                                .col-9
                                                    input(type="text" value= companyAdmin.companyAdmin class="profile-form mb-4" readonly)
                                                
                                    

        include includes/footer.pug