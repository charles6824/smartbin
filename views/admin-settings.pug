include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                        h5 Change Password
                        div(class="row justify-content-center")
                            div(class="col-md-10 card")
                                p.text-small Please, fill this form to reset your password
                                form(method="POST" class="mt-3")
                                    div(class="row")
                                        .col-md-6.form-field
                                            input(type="password" name="oldPassword" placeholder="Old Password" class="form-control mb-3")
                                            input(type="password" name="newPassword" placeholder="New Password" class="form-control mb-3" id="password")
                                            input(type="password" placeholder="Confirm New Password" class="form-control mb-3" id="cPassword")
                                            div(class="text-center mb-4")
                                                button(type="submit" id="submit" class="mt-4 btn main-btn") Continue

                                            if success
                                                if success.length != 0
                                                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                        button.close(type="button" data-dismiss="alert" aria-label="close")
                                                            span(aria-hidden="true") Ã—
                                                        span #{success}

                                            if error
                                                p.err-msg #{error}

        include includes/footer.pug